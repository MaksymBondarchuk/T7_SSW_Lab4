<Page
    x:Class="T7_SSW_Lab4.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Button x:Name="Build" Content="Build" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ButtonGenerate_Click" Width="80"/>
        <Canvas x:Name="CanvasGraph" Margin="10,52,10,10" SizeChanged="CanvasGraph_SizeChanged"/>
        <Button x:Name="ButtonClear" Content="Clear" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top" Width="80" Click="ButtonClear_Click"/>
        <Slider x:Name="SliderSize" Margin="95,3,0,0" VerticalAlignment="Top" Maximum="30" Minimum="10" HorizontalAlignment="Left" Width="150"/>
    </Grid>
</Page>
